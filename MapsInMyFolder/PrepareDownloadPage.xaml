<Page
    x:Class="MapsInMyFolder.PrepareDownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commun="clr-namespace:MapsInMyFolder.Commun;assembly=MapsInMyFolder.Commun"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MapsInMyFolder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="PrepareDownloadPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    KeyDown="Page_KeyDown"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="RessourcesDictionnary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Visibility="Visible">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0" Background="#FF171719">
            <Grid.RowDefinitions>
                <RowDefinition Height="65" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Width="Auto"
                Height="50"
                Margin="28,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Téléchargement"
                FontFamily="Segoe UI Light"
                FontSize="30"
                Foreground="#FFE2E2E1"
                MouseUp="Label_MouseUp" />
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="0"
                Padding="0,0,0,5"
                VerticalScrollBarVisibility="Auto">

                <Grid Grid.Row="1" Margin="15,10,5,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="LeftWidth" Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Background="Transparent">
                        <Label
                            Width="Auto"
                            Height="25"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Résolution : "
                            FontFamily="Segoe UI Light"
                            FontSize="19"
                            Foreground="#FFE2E2E1" />


                        <Slider
                            x:Name="ZoomSlider"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Panel.ZIndex="999"
                            AutoToolTipPlacement="TopLeft"
                            AutomationProperties.Name="Zoom"
                            FontSize="14"
                            Foreground="#F18712"
                            IsSnapToTickEnabled="True"
                            Maximum="21"
                            Minimum="0"
                            SmallChange="1"
                            TickPlacement="TopLeft"
                            ValueChanged="ZoomSlider_ValueChanged"
                            Value="18" />

                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="195" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="19" />
                                <RowDefinition Height="19" />
                                <RowDefinition Height="19" />
                                <RowDefinition Height="19" />
                            </Grid.RowDefinitions>
                            <Label
                                x:Name="Label_SliderMinMax"
                                Grid.Row="0"
                                Grid.Column="0"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Niveau de zoom (min=5, max=19)"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="{Binding ElementName=ZoomSlider, Path=Value}"
                                ContentStringFormat=": {0}"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Nombre de tuiles à télécharger (lxh)"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <Label
                                x:Name="Label_NbrTiles"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="0 x 0 = 0"
                                ContentStringFormat=": {0}"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Taille de l'image (lxh)"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <Label
                                x:Name="Label_ImgSize"
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="0 x 0 pixels"
                                ContentStringFormat=": {0}"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />

                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Taille d'image maximale"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <Label
                                x:Name="Label_ImgSizeMax"
                                Grid.Row="3"
                                Grid.Column="1"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="65000 x 65000 pixels"
                                ContentStringFormat=": {0}"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                        </Grid>



                        <Label
                            Width="Auto"
                            Height="25"
                            Margin="0,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Echelle  : "
                            FontFamily="Segoe UI Light"
                            FontSize="19"
                            Foreground="#FFE2E2E1" />
                        <StackPanel x:Name="WrapPanel_Echelle" Margin="0,10,0,0">
                            <Grid
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    x:Name="Label_Scale"
                                    Grid.Column="0"
                                    Width="Auto"
                                    Margin="0,0,0,5"
                                    Padding="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Content="Echelle :"
                                    FontFamily="Segoe UI"
                                    FontSize="11.8"
                                    Foreground="#888989" />

                                <TextBox
                                    x:Name="TextBox_Scale"
                                    Grid.Column="2"
                                    Height="22"
                                    Padding="15.5,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    Cursor="IBeam"
                                    FontFamily="Segoe UI"
                                    FontSize="11.8"
                                    LostFocus="TextBox_Scale_LostFocus"
                                    Style="{DynamicResource TextBoxCleanStyle_13}"
                                    Tag="automatic"
                                    Text="0"
                                    TextChanged="TextBox_Scale_TextChanged" />
                                <TextBox
                                    x:Name="TextBox_NoScale"
                                    Grid.Column="2"
                                    Height="22"
                                    Padding="15.5,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    Cursor="IBeam"
                                    FontFamily="Segoe UI"
                                    FontSize="11.8"
                                    IsEnabled="False"
                                    Style="{DynamicResource TextBoxCleanStyle_13}" />
                                <Label
                                    x:Name="Label_ScalePrefix"
                                    Grid.Column="2"
                                    Width="Auto"
                                    Height="20"
                                    Margin="5,0,0,0"
                                    Padding="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Content="1/"
                                    FontFamily="Segoe UI"
                                    FontSize="11.8"
                                    Foreground="#BCBCBC" />

                            </Grid>
                            <CheckBox
                                x:Name="CheckBoxAddScaleToImage"
                                Margin="0,5,0,0"
                                Foreground="#888989">
                                Ajouter une echelle graphique à l'image
                            </CheckBox>
                        </StackPanel>


                        <Label
                            Width="Auto"
                            Height="25"
                            Margin="0,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Redimensionnement  : "
                            FontFamily="Segoe UI Light"
                            FontSize="19"
                            Foreground="#FFE2E2E1" />
                        <Grid Margin="0,5,0,0" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="19" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Taille de l'image après redimensionnement "
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <Label
                                x:Name="Label_ImgSizeF"
                                Grid.Row="3"
                                Grid.Column="1"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="0 x 0 pixels"
                                ContentStringFormat=": {0}"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                        </Grid>
                        <WrapPanel
                            x:Name="WrapPanel_Largeur"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Label
                                Width="150"
                                Margin="0,0,0,5"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Largeur :"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <StackPanel
                                Width="{Binding ElementName=WrapPanel_Largeur, Path=ActualWidth, Converter={StaticResource MathConverter}}"
                                MinWidth="330"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                Background="Transparent">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        x:Name="TextBox_Redim_Width"
                                        Grid.Column="0"
                                        Height="22"
                                        HorizontalAlignment="Stretch"
                                        FontFamily="Segoe UI"
                                        FontSize="11.8"
                                        IsEnabled="True"
                                        LostFocus="TextBox_Redim_Width_LostFocus"
                                        Style="{DynamicResource TextBoxCleanStyle_13}"
                                        Text="0"
                                        TextChanged="TextBox_Redim_Width_TextChanged" />
                                    <ComboBox
                                        x:Name="TextBox_Redim_WUnit"
                                        Grid.Column="2"
                                        Height="21"
                                        HorizontalAlignment="Stretch"
                                        Cursor="Arrow"
                                        FontFamily="Segoe UI"
                                        FontSize="11.8"
                                        IsEnabled="True"
                                        Opacity="1"
                                        SelectedIndex="0"
                                        SelectionChanged="TextBox_Redim_WUnit_SelectionChanged">
                                        <ComboBoxItem>pixels</ComboBoxItem>
                                        <ComboBoxItem>pourcentages</ComboBoxItem>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel
                            x:Name="WrapPanel_Hauteur"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Label
                                Width="150"
                                Margin="0,0,0,5"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Hauteur :"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <StackPanel
                                Width="{Binding ElementName=WrapPanel_Hauteur, Path=ActualWidth, Converter={StaticResource MathConverter}}"
                                MinWidth="330"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                Background="Transparent">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        x:Name="TextBox_Redim_Height"
                                        Grid.Column="0"
                                        Height="22"
                                        HorizontalAlignment="Stretch"
                                        FontFamily="Segoe UI"
                                        FontSize="11.8"
                                        IsEnabled="True"
                                        LostFocus="TextBox_Redim_Height_LostFocus"
                                        Style="{DynamicResource TextBoxCleanStyle_13}"
                                        Text="0"
                                        TextChanged="TextBox_Redim_Height_TextChanged" />
                                    <ComboBox
                                        x:Name="TextBox_Redim_HUnit"
                                        Grid.Column="2"
                                        Height="21"
                                        HorizontalAlignment="Stretch"
                                        Cursor="Arrow"
                                        FontFamily="Segoe UI"
                                        FontSize="11.8"
                                        IsEnabled="True"
                                        Opacity="1"
                                        SelectedIndex="0"
                                        SelectionChanged="TextBox_Redim_HUnit_SelectionChanged">
                                        <ComboBoxItem>pixels</ComboBoxItem>
                                        <ComboBoxItem>pourcentages</ComboBoxItem>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </WrapPanel>



                        <Label
                            Width="Auto"
                            Height="25"
                            Margin="0,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Qualité  : "
                            FontFamily="Segoe UI Light"
                            FontSize="19"
                            Foreground="#FFE2E2E1" />
                        <Label
                            Width="Auto"
                            Height="15"
                            Margin="0,10,0,0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="NB : Ce parametre ne s&#39;applique seulement sur les images exportée en format JPG"
                            FontFamily="Segoe UI"
                            FontSize="11.8"
                            Foreground="#888989" />
                        <WrapPanel
                            x:Name="WrapPanel_Qualite"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Label
                                Width="150"
                                Margin="0,0,0,5"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Qualité :"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <StackPanel
                                Width="{Binding ElementName=WrapPanel_Hauteur, Path=ActualWidth, Converter={StaticResource MathConverter}}"
                                MinWidth="330"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                Background="Transparent">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        x:Name="TextBox_quality_number"
                                        Grid.Column="0"
                                        Height="22"
                                        HorizontalAlignment="Stretch"
                                        Cursor="IBeam"
                                        FontFamily="Segoe UI"
                                        FontSize="11.8"
                                        Foreground="#BCBCBC"
                                        IsEnabled="True"
                                        Style="{DynamicResource TextBoxCleanStyle_13}"
                                        TextChanged="TextBox_quality_number_TextChanged" />
                                    <ComboBox
                                        x:Name="TextBox_quality_name"
                                        Grid.Column="2"
                                        Height="21"
                                        HorizontalAlignment="Stretch"
                                        Cursor="Arrow"
                                        FontFamily="Segoe UI"
                                        FontSize="11.8"
                                        IsEnabled="True"
                                        Opacity="1"
                                        SelectedIndex="0"
                                        SelectionChanged="TextBox_quality_name_SelectionChanged">
                                        <ComboBoxItem>Faible</ComboBoxItem>
                                        <ComboBoxItem>Moyenne</ComboBoxItem>
                                        <ComboBoxItem>Elevée</ComboBoxItem>
                                        <ComboBoxItem>Supérieur</ComboBoxItem>
                                        <ComboBoxItem>Maximum</ComboBoxItem>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </WrapPanel>

                        <Label
                            Width="Auto"
                            Height="25"
                            Margin="0,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Couleurs  : "
                            FontFamily="Segoe UI Light"
                            FontSize="19"
                            Foreground="#FFE2E2E1" />
                        <Grid
                            x:Name="WrapPanel_Couleur"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Column="0"
                                Width="Auto"
                                Margin="0,0,0,5"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Convertir les couleurs de l&#39;image vers :"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />

                            <ComboBox
                                x:Name="Combobox_color_conversion"
                                Grid.Column="2"
                                Width="Auto"
                                Height="21"
                                HorizontalAlignment="Stretch"
                                Cursor="Arrow"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                IsEnabled="True"
                                Opacity="1"
                                SelectedIndex="0"
                                SelectionChanged="Combobox_color_conversion_SelectionChanged">
                                <ComboBoxItem Tag="Srgb">Original</ComboBoxItem>
                                <!--<ComboBoxItem Tag="Rgb">RGB</ComboBoxItem>-->
                                <!--<ComboBoxItem Tag="Rgb">RGB 16 bit</ComboBoxItem>-->
                                <ComboBoxItem Tag="Bw">Noir &amp; Blanc</ComboBoxItem>
                                <!--<ComboBoxItem Tag="Grey16">Noir &amp; Blanc (16bit)</ComboBoxItem>-->
                            </ComboBox>
                        </Grid>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="57" />
                <RowDefinition />
                <RowDefinition Height="25" />
                <RowDefinition Height="60" />
                <RowDefinition Height="15" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="265" />
                <ColumnDefinition Width="15" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Width="192"
                Height="50"
                Margin="28,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Aperçu"
                FontFamily="Segoe UI Light"
                FontSize="30"
                Foreground="#FFE2E2E1" />

            <Button
                x:Name="ClosePage_button"
                Grid.Row="0"
                Grid.Column="1"
                Width="30"
                Height="30"
                Margin="0,15,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="ClosePage_button_Click"
                Cursor="Hand"
                Foreground="#FFE2E2E1"
                Style="{DynamicResource IconButton}"
                ToolTip="{Binding Source={x:Static commun:Languages.Current}, Path=[editorCloseWindow]}">
                <Path
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Panel.ZIndex="999"
                    Data="{StaticResource CloseButton}"
                    Fill="Transparent"
                    RenderTransformOrigin="0,0"
                    Stretch="Uniform"
                    Stroke="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"
                    StrokeEndLineCap="round"
                    StrokeLineJoin="round"
                    StrokeStartLineCap="round"
                    StrokeThickness="0.8" />
            </Button>

            <ScrollViewer
                x:Name="GridImagePreviewInfoScrollViewer"
                Grid.Row="1"
                Grid.RowSpan="4"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0,0,00,0"
                Padding="10,60,15,0"
                SizeChanged="GridImagePreviewInfoScrollViewer_SizeChanged"
                VerticalScrollBarVisibility="Auto">
                <Grid
                    x:Name="GridImagePreviewInfo"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        x:Name="StackPanel_ImageTilePreview_0"
                        Grid.Row="0"
                        Grid.Column="0"
                        Background="#171719">
                        <Image
                            x:Name="ImageTilePreview_0_0"
                            Height="{Binding ElementName=ImageTilePreview_0_0, Path=ActualWidth}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Opacity="0"
                            Stretch="Fill" />
                        <Image
                            x:Name="ImageTilePreview_1_0"
                            Height="{Binding ElementName=ImageTilePreview_1_0, Path=ActualWidth}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Opacity="0"
                            Stretch="Fill" />
                    </StackPanel>

                    <StackPanel
                        x:Name="StackPanel_ImageTilePreview_1"
                        Grid.Row="0"
                        Grid.Column="1"
                        Background="#171719">
                        <Image
                            x:Name="ImageTilePreview_0_1"
                            Height="{Binding ElementName=ImageTilePreview_0_1, Path=ActualWidth}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Opacity="0"
                            Stretch="Fill" />
                        <Image
                            x:Name="ImageTilePreview_1_1"
                            Height="{Binding ElementName=ImageTilePreview_1_1, Path=ActualWidth}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Opacity="0"
                            Stretch="Fill" />
                    </StackPanel>

                    <StackPanel
                        x:Name="StackPanel_ImageTilePreview_2"
                        Grid.Row="0"
                        Grid.Column="2"
                        Background="#171719">
                        <Image
                            x:Name="ImageTilePreview_0_2"
                            Height="{Binding ElementName=ImageTilePreview_0_2, Path=ActualWidth}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Opacity="0"
                            Stretch="Fill" />
                        <Image
                            x:Name="ImageTilePreview_1_2"
                            Height="{Binding ElementName=ImageTilePreview_1_2, Path=ActualWidth}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Opacity="0"
                            Stretch="Fill" />
                    </StackPanel>

                    <Label
                        x:Name="ImageIsLoading"
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="5"
                        Padding="5,2,5,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="#99000000"
                        FontFamily="Segoe UI"
                        Foreground="#888989"
                        Visibility="Visible">
                        Chargement...
                    </Label>
                    <StackPanel
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        Background="Transparent">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="95" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="19" />
                                <RowDefinition Height="19" />
                                <RowDefinition Height="19" />
                                <RowDefinition Height="19" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
