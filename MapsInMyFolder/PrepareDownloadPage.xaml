                                x:Name="Label_LargeurTuile"
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="256"
                                ContentStringFormat=" : {0} pixels"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Nom du calque"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />
                            <Label
                                x:Name="Label_NomCalque"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Plan IGN"
                                ContentStringFormat=" : {0}"
                                FontFamily="Segoe UI"
                                FontSize="11.8"
                                Foreground="#888989" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Width="Auto"
                                Height="50"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
