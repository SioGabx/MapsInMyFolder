<UserControl
    x:Class="MapsInMyFolder.UserControls.LayersPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cefsharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:customCtrl="clr-namespace:MapsInMyFolder.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <customCtrl:SearchLayer
            x:Name="LayersSearchBar"
            Grid.Row="0"
            FontSize="16"
            Margin="10,0,5,0"
            LinkedLayerBrowser="{Binding ElementName=LayerBrowser}" />
        <Border
            Grid.Row="1"
            Width="Auto"
            Height="Auto"
            Margin="0,0,5,0"
            BorderBrush="Transparent"
            BorderThickness="1">
            <cefsharp:ChromiumWebBrowser
                x:Name="LayerBrowser"
                LoadingStateChanged="LayerBrowser_LoadingStateChanged"
                ToolTipOpening="LayerBrowser_ToolTipOpening" />
        </Border>
    </Grid>
</UserControl>
